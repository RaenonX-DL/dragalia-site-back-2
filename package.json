    "fastify": "^3.21.5",
    "fastify-cors": "^6.0.2",
    "fastify-helmet": "^5.3.2",
    "mongodb": "^4.1.1",
    "mongodb-memory-server": "^7.4.0",
    "newrelic": "^8.3.0",
    "node-fetch": "^2.6.2",
    "pm2": "^5.1.1"
